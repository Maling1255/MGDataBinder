# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

####################################################

# eg:  fastlane MGLibs lib:MGDataBinder tag:1.0.0 message:使用fastlane更新

####################################################

import_from_git(
	url: 'https://github.com/Maling1255/MGActionLanes.git', 
	branch: 'main', 
	path: 'fastlane/ios_fastfile.rb'
	)

default_platform(:ios)

platform :ios do
  desc "Description of what the lane does"
  lane :MGLibs do |options|
  	libName = options[:lib]
    message = options[:message]
    tag = options[:tag]
  	mg_update_lib(libName:libName, tag:tag, message:message)

  end
end
